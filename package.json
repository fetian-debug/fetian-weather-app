{
  "name": "weather-app",
  "version": "2.0.0",
  "description": "Professional weather application with Next.js and Node.js backend",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "node start-dev.js",
    "dev:cli": "nodemon app.js",
    "dev:web": "node web-server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "setup": "cp .env.example .env && cd frontend && npm install",
    "build": "cd frontend && npm run build",
    "deploy": "node deploy.js",
    "deploy:vercel": "cd frontend && vercel --prod",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "weather",
    "cli",
    "forecast",
    "nodejs",
    "nextjs",
    "vercel"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "chalk": "^4.1.2",
    "yargs": "^17.7.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
